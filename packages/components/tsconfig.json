{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "isolatedModules": true,
    "module": "esnext",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "esnext",
    "useDefineForClassFields": true
  },
  "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte", "src/**/*.ts"]
}
